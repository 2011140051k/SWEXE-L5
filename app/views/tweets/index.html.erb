<% @tweets.each do |t| %>
    <p>
    <%= t.message %>
    <% if session[:login_uid] %>
        <%= link_to '削除' , tweet_path(t), method: :delete %>
        <%= link_to 'いいね', likes_path(tweet_id: t.id), method: :post %>
        <%= link_to 'いいね削除', like_path(t), method: :delete %>
    <% end %>
    </p>
<% end %>

<p>
    <% if session[:login_uid] %>
        <%= link_to 'ツイートする', new_tweet_path %>
    <% end %>
</p>

<p>
    <% if session[:login_uid] %>
        <%= link_to 'ログアウト', top_logout_path %>
    <% else %>
        <%= link_to 'ログイン', top_login_path %>
    <% end %>
</p>

<p>
    <%= link_to 'ユーザー一覧', users_path %>
</p>